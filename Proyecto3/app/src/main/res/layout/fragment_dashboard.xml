<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="620dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Menu"
                android:textAlignment="center"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgProducto1"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/img1"
                        app:srcCompat="@drawable/img1" />

                    <ImageView
                        android:id="@+id/imgProducto2"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/img2"
                        app:srcCompat="@drawable/img2" />

                    <ImageView
                        android:id="@+id/imgProducto3"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/img3"
                        app:srcCompat="@drawable/img3" />

                    <ImageView
                        android:id="@+id/imgProducto4"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/img4"
                        app:srcCompat="@drawable/img4" />

                    <ImageView
                        android:id="@+id/imgProducto5"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/img5"
                        app:srcCompat="@drawable/img5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgProducto6"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/bebida1"
                        app:srcCompat="@drawable/bebida1" />

                    <ImageView
                        android:id="@+id/imgProducto7"
                        android:layout_width="180dp"
                        android:layout_height="189dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/bebida2"
                        app:srcCompat="@drawable/bebida2" />

                    <ImageView
                        android:id="@+id/imgProducto8"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/bebida3"
                        app:srcCompat="@drawable/bebida3" />

                    <ImageView
                        android:id="@+id/imgProducto9"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/bebida4"
                        app:srcCompat="@drawable/bebida4" />

                    <ImageView
                        android:id="@+id/imgProducto10"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/bebida5"
                        app:srcCompat="@drawable/bebida5" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>